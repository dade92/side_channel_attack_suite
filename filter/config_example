outputFilename      cos_filtered.dat	;name of the file in output
step                1000                ;number of traces to put in memory
samplingFreq        500                 ;sampling frequency
padding             zero                ;padding type: zero,hold,mean
filterCombination doNothing             ;what to do when more windows are combined: doNothing,clamp,normalize
;filterFile aes_adaptive_filter.dat     ;the file of the adaptive filter:if present, take the file,otherwise use the windows to generate the filter

;list of filter windows
windows {   
    first {
        filterType highPass     	;type of filter:low pass, band pass or high pass
        windowType nuttall         	;type of window: rect,hann,nuttall
	lowFrequency 450			;low frequency of the window
;	highFrequency 30		;high frequency of the window
    }
}

